{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "paths": {
            "@/*": ["src/*"],
            "@assets/*": ["assets/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
