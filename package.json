{
    "name": "trable",
    "version": "1.0.0",
    "license": "MIT",
    "packageManager": "pnpm@10.17.1",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "concurrently -n shared,shared:types,server,mobile \"pnpm dev:shared\" \"pnpm dev:shared:types\" \"pnpm dev:server\" \"pnpm dev:mobile\"",
        "dev:shared:types": "pnpm --filter=shared run dev:tsc",
        "dev:shared": "pnpm --filter=shared run dev",
        "dev:server": "pnpm --filter=server run dev",
        "dev:mobile": "pnpm --filter=mobile run start",
        "test": "concurrently -n shared,server,mobile \"pnpm test:shared\" \"pnpm test:server\" \"pnpm test:mobile\"",
        "test:shared": "pnpm --filter=shared run test",
        "test:server": "pnpm --filter=server run test",
        "test:mobile": "pnpm --filter=mobile run test",
        "lint": "eslint",
        "lint:fix": "eslint --fix .",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "prepare": "husky"
    },
    "devDependencies": {
        "concurrently": "^9.2.1",
        "eslint": "^9.36.0",
        "eslint-config-expo": "^10.0.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-project-structure": "^3.13.3",
        "husky": "^9.1.7",
        "prettier": "^3.6.2",
        "supabase": "^2.47.2",
        "typescript": "^5.9.2"
    }
}
