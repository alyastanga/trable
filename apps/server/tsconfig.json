{
    "compilerOptions": {
        "strict": true,
        "allowJs": true,
        "module": "preserve",
        "moduleDetection": "force",
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "build"],
    "references": [{ "path": "../../packages/shared" }]
}
